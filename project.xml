<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${base.project.dir}/base-dependencies.xml</extend>
  <pomVersion>3</pomVersion>
  <name>JXTA</name>
  <artifactId>net.jxta</artifactId>
  <currentVersion>1.0</currentVersion>
  <inceptionYear>2006</inceptionYear>
  <shortDescription>JXTA</shortDescription>
  <versions>
    <version>
      <id>1.0</id>
      <name>1.0</name>
      <tag>JXTA_1_0</tag>
    </version>
  </versions>
  <branches/>
  <developers>
    <developer>
      <name>Thomas Hilbig</name>
      <id>thomas</id>
      <email>thomas@idega.is</email>
      <organization>idega software</organization>
      <roles/>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <url>http://www.jdom.org/</url>
      <properties>
        <idegaweb.bundle.include>false</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>jaxen</groupId>
      <artifactId>jaxen</artifactId>
      <version>1.0-FCS</version>
      <jar>jaxen-1.0-FCS-full.jar</jar>
      <!-- jaxen-core.jar jaxen-jdom.jar -->

      <type>jar</type>
      <url>http://jaxen.codehaus.org/</url>
      <properties>
        <idegaweb.bundle.include>false</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>slide</groupId>
      <artifactId>saxpath</artifactId>
      <jar>saxpath.jar</jar>
      <type>jar</type>
      <url>http://saxpath.sourceforge.net</url>
      <properties>
        <idegaweb.bundle.include>false</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <type>jar</type>
      <url>http://logging.apache.org/log4j/</url>
      <properties>
        <idegaweb.bundle.include>false</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>org.swixml</groupId>
      <artifactId>swixml</artifactId>
      <version>1.5.144</version>
      <type>jar</type>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>bouncycastle</groupId>
      <artifactId>bcprov-jdk14</artifactId>
      <version>124</version>
      <type>jar</type>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty</artifactId>
      <version>4.2.12</version>
      <type>jar</type>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.8.0</version>
      <type>jar</type>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>ehcache</groupId>
      <artifactId>ehcache</artifactId>
      <version>1.2</version>
      <type>jar</type>
      <url>http://ehcache.sourceforge.net/</url>
      <properties>
        <idegaweb.bundle.include>false</idegaweb.bundle.include>
      </properties>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xerces</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
  </build>
  <properties/>
</project>
